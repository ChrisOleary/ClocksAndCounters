<Window x:Class="ClocksAndCounters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClocksAndCounters"
        mc:Ignorable="d"
        Title="MainWindow" Background="Black" SizeToContent="WidthAndHeight">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,0" StartPoint="0.1,1">
                <GradientStop Color="#86C2D9" Offset="0"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">
                <local:GaugeUserControl></local:GaugeUserControl>
                <local:RadialClock></local:RadialClock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
